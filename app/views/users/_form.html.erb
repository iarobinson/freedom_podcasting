<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="row form-inputs">
    <div class="col-md-8">
      <div class="mb-2">
        <%= f.input :first_name %>
      </div>
      <div class="my-2">
        <%= f.input :last_name %>
      </div>
      <div class="my-2">
        <%= f.input :email %>
      </div>
      <div class="my-2">
        <%= f.input :status %>
      </div>
      <div class="my-2">
        <%= f.input :address %>
      </div>
      <div class="row">
        <div class="col">
          <%= f.input :city %>
        </div>
        <div class="col">
          <%= f.input :state %>
        </div>
        <div class="col">
          <%= f.input :zip %>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <label class="form-control-label string optional" for="user_avatar">Avatar</label>

      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, width: "100%", class: "paddingbottom" %>
      <% else %>
        <%= image_tag "default_user_avatar.jpg",  width: "100%", class: "paddingbottom" %>
      <% end %>

      <%= f.file_field :avatar, multiple: false, direct_upload: true %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: common_big_bold_button %>
    <%= link_to destroy_user_session_path, method: :delete, class: common_big_bold_button do %>
      Sign Out
    <% end %>
  </div>
<% end %>
