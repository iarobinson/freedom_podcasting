<div class="container-fluid">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="row">
        <div class="col-md-4">
          <p><strong>Email:</strong><br><%= @user.email %></p>
          <p><strong>Name:</strong><br><%= @user.name %></p>
          <p><strong>Email:</strong><br><%= @user.email %></p>
          <p><strong>First Name:</strong><br><%= @user.first_name %></p>
          <p><strong>Last Name:</strong><br><%= @user.last_name %></p>
        </div>
        <div class="col-md-4">
          <p><strong>Address:</strong><br><%= @user.address %></p>
          <p><strong>City:</strong><br><%= @user.city %></p>
          <p><strong>State:</strong><br><%= @user.state %></p>
          <p><strong>Country:</strong><br><%= @user.country %></p>
          <p><strong>Zip:</strong><br><%= @user.zip %></p>
          <p><strong>Status:</strong><br><%= @user.status %></p>
        </div>
        <div class="col-md-4">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar, width: '100%', style: "max-height:500px;max-width:500px", class: "paddingbottom" %>
          <% else %>
            <%= image_tag "default_user_avatar.jpg", width: '100%', style: "max-height:500px;max-width:500px", class: "paddingbottom" %>
          <% end %>
        </div>
      </div>
      <div class="row paddingbottom">
        <div class="col-md-6 offset-md-3">
          <%= link_to "Edit My Profile", edit_user_path(@user), class: "btn btn-warning btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
