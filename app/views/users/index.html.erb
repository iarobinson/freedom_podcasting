<div class="container">
  <div class="pt-3">
    <h1>Users</h1>
  </div>
  <div class="row paddingbottom">
    <div class="card-deck">
      <% @users.each do |user| %>
        <div class="card">
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <%= if_it_exists_show_list_item([
                user.status,
                user.name,
                user.updated_at,
                user.email
              ]) %>
            </ul>
          </div>
          <div class="card-footer">
            <%= link_to "Manage #{user.name}", edit_user_path(user), class: "btn btn-primary btn-block" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
