<div class="container">
  <div class="row">
    <div class="col-8 col-2">
      <p id="notice"><%= notice %></p>

      <h1>Pages</h1>

      <table>
        <thead>
          <tr>
            <th>Title</th>
            <th>Heading</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @pages.each do |page| %>
            <tr>
              <td><%= page.title %></td>
              <td><%= page.heading %></td>
              <td><%= link_to 'Show', pages_path(page) %></td>
              <td><%= link_to 'Edit', edit_page_path(page) %></td>
              <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Page', new_page_path %>
    </div>
  </div>
</div>
