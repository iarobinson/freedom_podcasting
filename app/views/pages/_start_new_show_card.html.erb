<div class="row">
  <div class="col-3">
    <p>You can start a new podcast:</p>
    <%= link_to "Start a New Podcast", new_show_path, class:"btn btn-primary btn-block" %><br>
    <p>Or you can import an existing podcast:</p>
    <%= simple_form_for(@show) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="form-inputs">
      <%= f.input :feed_url, required: true %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, class: "btn btn-primary btn-block mb-4" %>
    </div>
    <% end %>
  </div>
  <div class="col-9">
    <% @shows.each do |show| %>
      <p><%= link_to show.title, show %></p>
    <% end %>
  </div>
</div>
