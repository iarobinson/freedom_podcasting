<div class="col-md-8 offset-md-2">
  <h1 class="text-center">Producer Dashboard</h1>
  <% if @shows.size > 0 %>
    <% @shows.each do |show| %>
      <p>
        <%= show.title %>
        <span class="float-right small">
          Episode Count: <%= show.episodes.count %>
        </span>
      </p>
      <ul class="list-group">
        <% show.episodes.each do |episode| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= episode.title %>
            <span class="badge badge-primary badge-pill">
              <%= episode.updated_at.strftime("%F") %>
            </span>
          </li>
        <% end %>
      </ul>
    <% end %>
  <% else %>
    <p class="text-center">
      You don't yet have any shows associated with your account.<br>
      <%= link_to "To add a new show, add the feed here.", feeds_path %>
    </p>
  <% end %>
</div>
