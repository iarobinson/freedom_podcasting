<div class="container">
  <div class= "row pb-2">
    <div class="col-md-8 offset-md-2 text-center">
      <h1>Producer Dashboard</h1>
    </div>
  </div>
  <div class="row pb-5">
    <% if @shows.size > 0 %>
      <% @shows.each do |show| %>
        <div class="col-md-10 offset-md-1 pb-3">
          <div class="card">
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <%= if_it_exists_show_list_item([
                  "<strong>Title</strong>: #{show.title}",
                  "<strong>Total Episode Count</strong>: #{show.episodes.count}",
                  # "<strong>Name</strong>: #{user.first_name} #{user.name}",
                  # "<strong>Last updated</strong>: #{distance_of_time_in_words(Time.now, user.updated_at)}",
                  # "<strong>Email</strong>: #{user.email}"
                ]) %>
              <% show.episodes.limit(3).each do |episode| %>
                  <li class="list-group-item d-flex justify-content-between align-items-center">
                    <%= link_to episode.title, show_episode_path(show, episode) %>
                    <span class="badge badge-primary badge-pill">
                      <%= episode.updated_at.strftime("%F") %>
                    </span>
                  </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
      <p class="text-center">
        You don't yet have any shows associated with your account.<br>
        <%= link_to "To add a new show, add the feed here.", new_shows_path %>
      </p>
    <% end %>
  </div>
</div>
