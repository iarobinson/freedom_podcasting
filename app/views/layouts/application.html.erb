<!DOCTYPE html>
<html>
  <head>
    <title>Freedom Podcasting - Podcast Production Tools</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <%= render 'layouts/authenticated_navigation_bar' %>
    <% else %>
      <%= render 'layouts/unauthenticated_navigation_bar' %>
    <% end %>
    <%= render "layouts/alert" %>
    <%= yield %>
  </body>
</html>
