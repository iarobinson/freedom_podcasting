<!-- Not using this yet, but I coded it up so maybe it'll be useful one day -->
<div class="row">
  <% unless @shows == nil %>
    <div class="col-md-10 offset-md-1">
      <h1>Our Favorite Shows</h1>
      <% @shows.each do |show| %>
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <p>
                  <%= image_tag show.show_art, width: "100%" %>
                </p>
                <p class="text-center">
                  <%= pluralize show.episodes.count, "Episode" %>
                </p>
              </div>
              <div class="col-10">
                <div class="row">
                  <div class="col-6">
                    <p><%= link_to show.title, show %></p>
                    <p><strong>Host:</strong> <%= show.host %></p>
                  </div>
                  <div class="col-6">
                    <p><%= link_to "Feed URL", show.feed_url, target: "_blank" %></p>
                  </div>
                </div>
                <p><%= show.description %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
