<!-- Not using this yet, but I coded it up so maybe it'll be useful one day -->
<div class="row pt-5">
  <% unless @shows == nil %>
    <div class="col-md-10 offset-md-1">
      <% @shows.each do |show| %>
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
              <div class="col-2">
                <p>
                  <% if show.show_art.attached? %>
                    <%= image_tag show.show_art, width: "100%" %>
                  <% end %>
                </p>
              </div>
              <div class="col-10">
                <div class="row">
                  <div class="col-6">
                    <p><%= link_to show.title, show %></p>
                    <p><strong>Host:</strong> <%= show.host %></p>
                    <p><%= pluralize show.episodes.count, "Episode" %></p>
                  </div>
                  <div class="col-6 text-center">
                    <%= link_to show.feed_url, target: "_blank", class: "btn btn-primary" do %>
                      <%= material_icon.rss_feed %>
                      <br>RSS Feed
                    <% end %>
                    <%= link_to show, class: "btn btn-primary" do %>
                      <%= material_icon.remove_red_eye %>
                      <br>Show Details
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="list-group list-group-flush">
            <div class="list-group-item">
              <h5>Episodes:</h5>
            </div>
            <% show.episodes.limit(10).reverse.each do |episode| %>
              <div class="list-group-item">
                <div class="row">
                  <div class="col">
                    <%= episode.title %>
                  </div>
                  <div class="col">
                    <%= episode.pub_date %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
