<div class="row">
  <% unless @shows == [] %>
    <div class="col-lg-10 offset-lg-1">
      <div class="card mb-4">
        <ul class="list-group list-group-flush">
          <% @shows.each do |show| %>
            <li class="list-group-item">
              <div class="row">
                <div class="col">
                  <%= render "shows/partials/default_show_art", show: show %>
                </div>
                <div class="col-10">
                  <div class="row">
                    <div class="col-8">
                      <p>
                        <small class="text-muted">Title:</small>
                        <%= show.title %>
                      </p>
                      <p>
                        <small class="text-muted">Host:</small> <%= show.host %>
                      </p>
                    </div>
                    <div class="col-4">
                      <p><small class="text-muted">Episode Count:</small> <%= show.episodes.count %></p>
                      <p><%= link_to "rss_feed", show.feed_url, target: "_blank" %></p>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col">
                      <%= link_to "Show Details", show, class: common_big_bold_button %>
                    </div>
                    <div class="col">
                      <%= link_to "RSS Feed", show.feed_url, class: common_big_bold_button("success"), target: "_blank" %>
                    </div>
                  </div>
                </div>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
      <%= link_to "Create a New Show", new_show_path, class: common_big_bold_button("success") %>
    </div>
  <% end %>
</div>
