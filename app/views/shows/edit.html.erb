<div class="container">
  <div class="row">
    <div class=" offset-md-2 col-md-8">
      <h1>Editing Show</h1>

      <%= render 'form', show: @show %>

      <div class="row">
        <div class="col">
          <%= link_to "View Show", @show, class: common_big_bold_button("success") %>
        </div>
        <div class="col">
          <%= link_to 'Delete', @show, method: :delete, data: { confirm: 'Are you sure? This cannot be undone.' }, class: common_big_bold_button %>
        </div>
      </div>
    </div>
  </div>
</div>
