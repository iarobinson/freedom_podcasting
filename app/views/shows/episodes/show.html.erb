<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="row text-center">
        <div class="col-md-2 offset-md-2">
          <%= image_tag @episode.show.show_art, class: "img-fluid", width: "250px" %>
        </div>
        <div class="col-md-6">
          <audio controls>
            <source src="<%= @episode.enclosure %>" type="audio/mpeg">
            Your browser does not support the audio element.
          </audio>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <p><strong>Title:</strong> <%= @episode.title %></p>
          <p><strong>Client cost:</strong> <%= number_to_currency(@episode.client_cost) %></p>
          <p><strong>Paid:</strong> <%= @episode.paid %></p>
          <p><strong>Id:</strong> <%= @episode.id %></p>
          <p><strong>Title:</strong> <%= @episode.title %></p>
          <p><strong>Date Published:</strong> <%= @episode.pub_date %></p>
          <p><strong>link:</strong> <%= @episode.link %></p>
          <p><strong>Description:</strong> <%= @episode.description %></p>
          <p><strong>Content Encoded:</strong> <%= @episode.content_encoded.html_safe %></p>
        </div>
        <div class="col">
          <p><strong>itunes_duration:</strong> <%= @episode.itunes_duration %></p>
          <p><strong>itunes_explicit:</strong> <%= @episode.itunes_explicit %></p>
          <p><strong>itunes_keywords:</strong> <%= @episode.itunes_keywords %></p>
          <p><strong>itunes_subtitle:</strong> <%= @episode.itunes_subtitle %></p>
          <p><strong>itunes_episode:</strong> <%= @episode.itunes_episode %></p>
          <p><strong>itunes_episodeType:</strong> <%= @episode.itunes_episodeType %></p>
          <p><strong>client_cost:</strong> <%= number_to_currency(@episode.client_cost) %></p>
          <p><strong>show_id:</strong> <%= @episode.show_id %></p>
          <p><strong>created_at:</strong> <%= @episode.created_at.strftime("%m-%d-%Y") %></p>
          <p><strong>updated_at:</strong> <%= @episode.updated_at.strftime("%m-%d-%Y") %></p>
          <p><strong>enclosure:</strong> <%= @episode.enclosure %></p>
        </div>
      </div>

      <div class="row">
        <div class="col-md-6">
          <%= link_to 'Edit', edit_show_episode_path(@show, @episode), class: "btn btn-primary btn-block" %>
        </div>
        <div class="col-md-6">
          <%= link_to 'Back', show_episodes_path(@show), class: "btn btn-warning btn-block" %>
        </div>
      </div>
    </div>
  </div>
</div>
