<div class="container-fluid">
  <div class="row paddingbottom">
    <div class="col-md-10 offset-md-1">
      <% if @shows.size > 0 %>
        <h1 class="text-center">Shows</h1>
        <table class="table table-responsive table-hover">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Title</th>
              <th scope="col">Host</th>
              <th scope="col">Website</th>
              <th scope="col">Category</th>
              <th scope="col">Description</th>
              <th scope="col">Subtitle</th>
              <th scope="col">Last Updated</th>
              <th scope="col">Manage</th>
            </tr>
          </thead>
          <tbody>
            <% @shows.each_with_index do |show, i| %>
              <tr>
                <th scope="row"><%= i + 1 %></th>
                <td>
                  <%= link_to show_path(show) do %>
                    <% if show.show_art.attached? %>
                      <%= image_tag show.show_art, width: "100%" %>
                    <% end %>
                    <%= show.title %>
                  <% end %>
                </td>
                <td><%= show.host %></td>
                <td><%= show.website %></td>
                <td><%= show.category %></td>
                <td><%= show.description.truncate(150) if show.description %></td>
                <td><%= show.subtitle %></td>
                <td><%= show.updated_at.to_formatted_s(:short) %></td>
                <td>
                  <%= link_to edit_show_path(show) do %>
                    <%= material_icon.edit %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <% else %>
        <p class="text-center">You don't have any shows associated with your account.</p>
      <% end %>
    </div>
  </div>
  <div class="row paddingbottom">
    <div class="col-4 offset-4">
      <%= link_to 'New Show', new_show_path, class: "btn btn-primary btn-block text-white" %>
    </div>
  </div>
</div>
