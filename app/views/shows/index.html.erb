<div class="container">
  <div class="row paddingbottom">
    <h1>Shows</h1>
  </div>
  <div class="row paddingbottom">
    <% if @shows.size > 0 %>
      <div class="card-deck">
        <% @shows.each_with_index do |show, index| %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= show.title %></h5>
              <div class="card-text"><%= show.description %></div>
              <div class="card-text">
                <small class="text-muted">
                  Last updated <%= time_ago_in_words(show.updated_at) %>
                </small>
              </div>
            </div>
            <ul class="list-group list-group-flush">
              <% details = [show.host, show.website, show.category, show.description, show.subtitle] %>
              <%= if_it_exists_show_list_item(details) %>
            </ul>
            <div class="card-footer">
              <div class="row">
                <div class="col-6">
                  <%= link_to 'Show', show, class: "btn btn-primary text-white btn-sm btn-block" %>
                </div>
                <div class="col-6">
                  <%= link_to 'Edit', edit_show_path(show), class: "btn btn-success text-white btn-sm btn-block" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p>You don't have any shows associated with your account.</p>
    <% end %>
  </div>
  <div class="row paddingbottom">
    <div class="col-4 offset-4">
      <%= link_to 'New Show', new_show_path, class: "btn btn-primary btn-block text-white" %>
    </div>
  </div>
</div>
