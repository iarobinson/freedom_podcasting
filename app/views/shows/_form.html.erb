<%= simple_form_for(@show) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <p>No need to overthink this. You can change these any time in the future.</p>
  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :host %>
  </div>

  <div class="form-inputs">
    <%= f.input :website %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :subtitle %>
  </div>

  <div class="form-inputs">
    <%= f.input :show_art %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary btn-block mb-4" %>
  </div>
<% end %>
