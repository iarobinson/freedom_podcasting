
<%= simple_form_for(@show) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :host %>
    <%= f.input :website %>
    <%= f.input :category %>
    <%= f.input :description %>
    <%= f.input :subtitle %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
