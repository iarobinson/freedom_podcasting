<%= simple_form_for(@show) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <p><b>Not set in stone</b> - Everything you set here can be changed in the future.</p>
  <div class="form-inputs">
    <%= f.input :title %>
  </div>

  <div class="form-inputs">
    <%= f.input :host %>
  </div>

  <div class="form-inputs">
    <%= f.input :website %>
  </div>

  <div class="form-inputs">
    <%= f.input :description %>
  </div>

  <div class="form-inputs">
    <%= f.input :subtitle %>
  </div>

  <label class="form-control-label string optional">Categories</label><br>

  <%= f.input :category_one, collection: @show.categories, include_blank: false, prompt: "Select a category" %>
  <%= f.input :category_two, collection: @show.categories, include_blank: false, prompt: "Select a category" %>
  <%= f.input :category_three, collection: @show.categories, include_blank: false, prompt: "Select a category" %>

  <div class="input-group my-3">
    <label class="input-group-text" for="show_art_upload">Upload</label>
    <%= f.file_field :show_art, id: "show_art_upload", class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: common_big_bold_button %>
  </div>
<% end %>
