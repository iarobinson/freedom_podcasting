    <p>
      <strong>Show Title:</strong>
      <%= @show.title %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Host:</strong>
      <%= @show.host %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Website:</strong>
      <%= @show.website %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Category:</strong>
      <%= @show.category %>
    </p>
  </div>
  <div class="col">
    <p>
      <strong>Description:</strong>
      <%= @show.description %>
    </p>
