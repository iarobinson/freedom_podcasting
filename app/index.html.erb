<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">

      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Episode Title</th>
            <th scope="col">Show Title</th>
            <th scope="col">Duration</th>
          </tr>
        </thead>
        <tbody>


          <% @episodes.limit(25).each do |episode| %>
            <%= link_to show_episode_path(episode.show, episode) do %>

              <tr>
                <th scope="row"><%= image_tag episode.show.show_art, width: "25px" %></th>
                <td>
                  <%= link_to episode.title, show_episode_path(episode.show, episode) %>
                </td>
                <td><%= episode.show.title %></td>
                <td><%= episode.itunes_duration %></td>
              </tr>
            <% end %>
          <% end %>


        </tbody>
      </table>

    </div>
  </div>
</div>
